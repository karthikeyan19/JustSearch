<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".GoogleAddress">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            />

    </android.support.design.widget.AppBarLayout>
<TextView
   android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/place_name"
    android:layout_below="@id/appBar"
    android:text="@string/place_name"
    style="@style/item_textviews"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/place"
        style="@style/item_textviews"
        android:layout_alignTop="@+id/place_name"
        android:layout_toRightOf="@+id/place_name"
        android:layout_toEndOf="@+id/place_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/address"
        android:id="@+id/address_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/place_name"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/item_textviews"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/address"
        android:layout_below="@+id/address_name"
        android:layout_toRightOf="@+id/address_name"
        android:layout_toEndOf="@+id/address_name"
        style="@style/item_textviews"/>

</RelativeLayout>
